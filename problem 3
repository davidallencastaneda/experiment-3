
#include <iostream>

using namespace std;

int main()
{
    int a;
    char text[30];
    
    cout<<"Enter the text: ";
    cin>>text;
    
    cout<<"The reverse order is: ";
    
    for(a=strlen(text)-1; a>=0; a--)
        cout<<text[a];
    
    cout<<endl<<"The array size is: "<<strlen(text);
    cout<<endl<<endl;
    
    return 0;
    
}
